---
import { getCollection } from 'astro:content';
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';


// 1. Get all projects
const allProjects = await getCollection('projects');

// 2. LOGIC: Select which ones or how many
// Example A: Only show the first 3
const featuredProjects = allProjects.slice(0, 3);

// Example B: Filter by specific titles (Which ones)
const selectedTitles = ["Quiz Project", "myEvent"];
const manualSelection = allProjects.filter(p => selectedTitles.includes(p.data.title));

// Example C: Filter by Tag (e.g., only Python)
const pythonProjects = allProjects.filter(p => p.data.tags.includes("Python"));
---

<PortfolioLayout title="My Work">
  <h1>Projects</h1>
  
  <div class="project-list">
    {/* Change 'featuredProjects' to 'manualSelection' or 'pythonProjects' as needed */}
    {featuredProjects.map((project, index) => (
      <ProjectCard project={project} index={index}/>
    ))}
  </div>
</PortfolioLayout>