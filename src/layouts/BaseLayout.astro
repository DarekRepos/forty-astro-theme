---
import Head from "../components/Head.astro";
import Wrapper from "../components/Wrapper.astro";
import Footer from "../components/Footer.astro";
import { site } from "../data/site";
const pageTitle = Astro.props.title;
const base = import.meta.env.BASE_URL;
---

<html lang="en">
  <head>
    <Head pageTitle={pageTitle} siteTitle={site.title} />
  </head>
  <body>
    <Wrapper layout="home" />
    <div id="main">
      <slot />
    </div>

    <Footer
      title={site.title}
      subtitle={site.subtitle}
      socials={site.socials}
    />
    <!-- Theme scripts (using JSX comments so Astro doesn't try to parse the braces) -->
    <!-- Theme scripts -->
    <script is:inline src={base + "/scripts/jquery.min.js"}></script>
    <script is:inline src={base + "/scripts/jquery.scrolly.min.js"}></script>
    <script is:inline src={base + "/scripts/jquery.scrollex.min.js"}></script>
    <script is:inline src={base + "/scripts/util.js"}></script>
    <script is:inline src={base + "/scripts/main.js"}></script>
    <!-- droping support for ie8 an ie9 -->
  </body>
</html>
