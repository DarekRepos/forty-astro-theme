---
import { site } from "../data/site";
type LayoutType = "landing" | "home" | "default";

type Props = { layout?: LayoutType };

const { layout = "default" } = Astro.props;

const headerClass =
  layout === "landing" ? "alt style2" :
  layout === "home" ? "alt" :
  "";

const base = import.meta.env.BASE_URL;
const homeHref = `${base}`; // BASE_URL already includes the subpath + trailing slash
---

<header id="header" class={headerClass || undefined}>
  <a href={homeHref} class="logo">
    <strong>{site.title}</strong> <span>{site.subtitle}</span>
  </a>
  <nav>
    <a href="#menu">Menu</a>
  </nav>
</header>
