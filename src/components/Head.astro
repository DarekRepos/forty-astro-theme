---
import "../styles/main.scss";
type Props = {
  pageTitle?: string;
  siteTitle: string;
};

const { pageTitle, siteTitle } = Astro.props;
---

<meta charset="utf-8" />
<meta
  name="viewport"
  content="width=device-width, initial-scale=1, user-scalable=no"
/>

<title>{pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle}</title>
